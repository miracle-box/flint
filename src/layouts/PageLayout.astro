---
import Navbar from '~/components/common/Navbar.astro';
import Layout from './EmptyLayout.astro';
import type { BlankLayoutProps } from '~/lib/types';

type Props = BlankLayoutProps;

const { navConfigKey } = Astro.props;
---

<Layout {...Astro.props}>
	<Fragment slot="layout-top">
		<slot name="layout-top" />
		<header
			class="sticky top-0 z-10 border-b border-base-content/10 bg-base-100"
		>
			<slot name="page-before-navbar" />
			<div class="container mx-auto">
				<Navbar configKey={navConfigKey}>
					<slot
						name="navbar-before-title"
						slot="navbar-before-title"
					/>
					<slot name="navbar-after-title" slot="navbar-after-title" />
					<slot
						name="navbar-before-links"
						slot="navbar-before-links"
					/>
					<slot name="navbar-after-links" slot="navbar-after-links" />
				</Navbar>
			</div>
		</header>
	</Fragment>

	<main class="flex-shrink-0 flex-grow">
		<slot />
	</main>

	<Fragment slot="layout-bottom">
		<slot name="page-before-footer" />
		<slot name="page-footer" />
		<slot name="layout-bottom" />
	</Fragment>
</Layout>
